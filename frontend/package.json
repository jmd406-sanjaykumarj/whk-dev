{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "author": "vk",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:jlens": "npm run build --workspace=jlens",
    "build:package": "npm run postinstall",
    "dev": "turbo run dev",
    "dev:jlens": "turbo run dev --parallel --filter=@repo/ui --filter=jlens",
    "dev:packages": "npm run dev --workspace=@repo/ui",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "format:all": "prettier --write --cache . && sort-package-json \"package.json\" \"apps/*/package.json\"",
    "format:check": "npx prettier --check . && sort-package-json \"package.json\" \"apps/*/package.json\" --check",
    "postinstall": "turbo run build:package",
    "purge": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "purge:all": "npm run purge && npm run purge:dist && npm run purge:build",
    "purge:build": "find . -name \"build\" -type d -prune -exec rm -rf '{}' +",
    "purge:dist": "find . -name \"dist\" -type d -prune -exec rm -rf '{}' +",
    "v-prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prepare": "husky",
    "test": "echo \"No test specified\" && exit 0"
  },
  "overrides": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jwt-decode": "^2.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.0",
  "dependencies": {
    "jwt-decode": "^4.0.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-supersub": "^1.0.0",
    "sonner": "^2.0.6"
  }
}
